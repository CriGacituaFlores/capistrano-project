<article class="col-sm-12 col-md-6">
  <%= form_tag(send_mail_path, class: 'col') do %>
    <div class="form-label-group">
      <%= text_field_tag 'name', nil, class: 'form-control', placeholder: 'Name' %>
      <label for="name">Name</label>
    </div>

    <div class="form-label-group">
      <%= text_field_tag 'email', nil, class: 'form-control', placeholder: 'Email address' %>
      <label for="email">Email asddress</label>
    </div>

    <div class="form-label-group">
      <%= text_field_tag 'message', nil, class: 'form-control', placeholder: 'Comments' %>
      <label for="message">Comments</label>
    </div>

    <%= submit_tag nil, class: 'btn btn-primary' %>


  <% end %>
</article>